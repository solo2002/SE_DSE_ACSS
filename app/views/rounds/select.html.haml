- flash.each do |key, value|
	= content_tag :div, "*"+value, class: "flash_#{key}"
%h1 Participants

= link_to 'Add Participants', new_participant_path
= link_to 'Back', competitions_path

%table
  %tr
    %th Name
    %th Location
    %th Phone No
    %th Email
    %th Description
    %th Action
    %th Action
    %th Action
  

  - @participants.each do |participant| 
    %tr
      %td= participant.p_name
      %td= participant.p_loc 
      %td= participant.p_phone
      %td= participant.p_email
      %td= participant.p_des 
      %td= link_to 'Details', participant_path(participant)
      %td= link_to 'Edit' , edit_participant_path(participant)
      %td= check_box_tag 1, @selected_participants.include?(participant)
= link_to 'Home', competitions_path    
  
